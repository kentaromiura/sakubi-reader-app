{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "sakubi-reader-app",
    "version": "0.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "sakubi-reader-app",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "resources": [
        "src/sakubi.html",
        "src/jitindex.dict",
        "src/jitendex.comp.db",
        "src/jitindex.audio.dict",
        "src/jitendex.audio.db"
      ],
      "active": true,
      "targets": "all",
      "identifier": "com.sakubi-reader-app.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
